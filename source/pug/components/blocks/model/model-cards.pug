                li.card-ad
                    +icon("icon-close", 17, 17)
                li.card-priority
                    +icon("icon-close", 17, 17)
                li.card-trading-plan
                    .trading-plan
                            .trading-plan-minor
                                p 1 заявка
                            .trading-plan-major
                                p 10 заявок

                    .comission
                            p Стандарт

                             p Премiум
